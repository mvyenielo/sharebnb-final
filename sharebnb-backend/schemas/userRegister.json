{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/userRegister.json",
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "firstName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "lastName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "password": {
        "type": "string",
        "minLength": 5,
        "maxLength": 20
      },
      "email": {
        "type": "string",
        "minLength": 6,
        "maxLength": 60,
        "format": "email"
      },
      "phone": {
        "type": "integer",
        "maxLength": 11
      }
    },
    "additionalProperties": false,
    "required": [
      "username",
      "firstName",
      "lastName",
      "password",
      "email",
      "phone"
    ]
  }