{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/ListingNew.schema.json",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "description": {
        "type": "string"
      },
      "price": {
        "type": "integer",
        "minimum": 0
      },
      "location": {
        "type": "string"
      },
      "listedBy": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "title",
      "description",
      "price",
      "location"
    ]
  }